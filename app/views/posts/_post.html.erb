<!-- passing attr: post -->
  <div class = 'row'>

    <div class = 'span1 well text-center'>

      <% if !voted?(post) %>
        <%= link_to vote_post_path(post, vote: true), method: 'post' do %>
          <i class = 'icon-arrow-up'></i>
        <% end %>
      <% end %>

      <br>
      <%= post.count_vote %> liked
      <br>

      <% if !voted?(post) %>
        <%= link_to vote_post_path(post, vote: false), method: 'post' do %>
          <i class = 'icon-arrow-down'></i>
        <% end %>
      <% end %>

    </div>

    <div class = 'span8 well'>

      <%= render post.categories %>

      <h4> <%= link_to post.title, fixed_url(post.url) %> </h4>
      <p> <%= post.description %> </p>
      <p>
        <span class = 'quiet' >posted by</span> <strong> <%= post.creator.username %></strong>
        <small>at <%= time_format(post.created_at) %> </small>
      </p>

      <small>
        <span>
          <%= link_to "#{post.comments.size} comments", post_path(post)%>
        </span>
      </small>

    </div>
  </div>

